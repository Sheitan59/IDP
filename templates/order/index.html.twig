{% extends 'base.html.twig' %}

{% block title %}Valider ma commande - Indoor Proxy Garden{% endblock %}

{% block content %}
    <h2>je passe ma commande</h2>
    <p>Choisisez vos preference avant de passer commande</p>
    <hr>
    <div class="row">
        <div class="col-6">
        {% set formHtml %}
            {{ form_start(form, {action:path('order_recap')})}}
            {{ form_end(form)}}
        {% endset %}

        {{ formHtml|replace({'[br]' : '<br/>'})|raw }}
        </div>
        <div class="col-6"> 
         <div class="text-center">
                <p>Retrouvez le r√©capitulatif de vos produits.</p>
            </div>
            <div class="order-summary">
                {% for key,produit in cart %}
                    <div class="row {% if key > 0 %}mt-2{% endif %}">
                        <div class="col-2">
                            <img src="/uploads/{{ produit.produit.image }}" alt="{{ produit.produit.nom }}" height="75px">
                        </div>
                        <div class="col-8 my-auto">
                            {{ produit.produit.nom }}<br/>
                            <small>{{ produit.produit.description }}</small>
                        </div>
                        <div class="col-2 my-auto">
                            x {{ produit.quantity }}
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
